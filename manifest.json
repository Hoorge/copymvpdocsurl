{
  "name": "Copy Link",
  "description": "Copies the URL of the page including your MVP Docs Chapions Identification tag.",
  "version": "1.0",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "permissions": ["activeTab", "storage"],
  "options_page":"options.html",
  "browser_action": {
      "default_title": "Copy Link",
      "default_icon": "logo16.png"
  },
  "icons": {
    "16": "logo16.png",
    "32": "logo32.png",
    "48": "logo48.png",
    "128": "logo128.png"
  },
  "manifest_version": 2
}
